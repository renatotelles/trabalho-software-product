@page
@model Vendas.Pages_FormaDePagamento.EditModel

@{
    ViewData["Title"] = "Alterar";
}


<h4>Alterar Forma de Pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FormaDePagamento.Id" />
            <div class="form-group">
                <label asp-for="FormaDePagamento.Nome" class="control-label"></label>
                <input asp-for="FormaDePagamento.Nome" class="form-control" />
                <span asp-validation-for="FormaDePagamento.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaDePagamento.Prazo" class="control-label"></label>
                <input asp-for="FormaDePagamento.Prazo" class="form-control" />
                <span asp-validation-for="FormaDePagamento.Prazo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaDePagamento.Taxa" class="control-label"></label>
                <input asp-for="FormaDePagamento.Taxa" class="form-control" />
                <span asp-validation-for="FormaDePagamento.Taxa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaDePagamento.DataCriacao" class="control-label"></label>
                <input asp-for="FormaDePagamento.DataCriacao" class="form-control" />
                <span asp-validation-for="FormaDePagamento.DataCriacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
